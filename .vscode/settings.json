{
  // Activate ESLint
  "eslint.enable": true,

  // Formats documents on save
  "editor.formatOnSave": true,

  // Turn it off for JS
  "[javascript]": {
    "editor.formatOnSave": false
  },

  // Tell the ESLint plugin to run on save
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true,
    "source.organizeImports": false
  },

  "eslint.alwaysShowStatus": true,

  // Prettier SCSS
  // Turn it off for CSS, Less, SCSS
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "[scss]": {
    "editor.formatOnSave": false,
  },

  // Turn it off for HTML
  "[html]": {
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.stylelint": false
    }
  },

  // Disable Prettier for the following languages
  "prettier.disableLanguages": ["js", "scss"]
}
